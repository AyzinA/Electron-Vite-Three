{
  "name": "electron-three",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "./dist-electron/main.js",
  "build": {
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**",
      "dist-electron/**"
    ],
    "asar": true,
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && vite build --config vite.config.ts",
    "preview": "vite preview",
    "dist:win": "npm run build && electron-builder --win"
  },
  "dependencies": {
    "three": "^0.179.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/three": "^0.179.0",
    "electron": "^30.0.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.5.0",
    "vite": "^5.4.0",
    "vite-plugin-electron": "^0.29.0"
  }
}
